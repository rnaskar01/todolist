<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To do list</title>
    <link rel="stylesheet" href="index.css">
</head>
<body>
<div class="box" id="heading">
    <h1><%= kindofday %></h1>
</div>
<div class="box">
<div class="box" id="worklist">
    <h2>Working List</h2>
</div>
<div class="box">
        <% newListItems.forEach(function(item) { %>
            <form action="/delete" method="post">
            <div class="item">
                    <input type="checkbox" name="checkbox" value="<%= item._id %>" onChange="this.form.submit()">
                    <p><%= item.name %></p>
                </div>
            </form>
        <% }); %>

        <form action="/" method="post" class="newitem">
            <input id="myinput" type="text" name="newItem" autocomplete="off" placeholder="New Item">
            <button type="submit" value="<%= kindofday %>">+</button>
        </form>
  
</div>
</body>
</html>